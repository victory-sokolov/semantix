{
    "name": "@vsokolov/semantix",
    "version": "1.0.0",
    "description": "CLI tool to setup conventional commits, semantic-release, and automated releases",
    "keywords": [
        "cli",
        "commitlint",
        "conventional-commits",
        "semantic-release",
        "typescript"
    ],
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "author": "Viktor Sokolov",
    "bin": {
        "setup-commits": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "scripts": {
        "build": "rolldown src/index.ts -o dist/index.js -f esm -p node --clean-dir",
        "start": "bun run ./src/index.ts",
        "dev": "bun --watch ./src/index.ts",
        "lint": "oxlint",
        "lint:fix": "oxlint --fix",
        "format": "oxfmt src tests --write",
        "format:check": "oxfmt --check src tests",
        "typecheck": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage",
        "prepublishOnly": "bun run build",
        "commit": "cz",
        "jscpd": "jscpd src/ tests",
        "up-latest": "bun update --latest",
        "release": "semantic-release",
        "release:dry": "semantic-release --dry-run",
        "prepare": "bunx lefthook install"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.0",
        "@commitlint/config-conventional": "^20.4.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "12.0.3",
        "@types/bun": "1.3.8",
        "@types/node": "25.2.0",
        "find-up": "^8.0.0",
        "jscpd": "4.0.8",
        "lefthook": "^2.0.16",
        "oxfmt": "0.27.0",
        "oxlint": "1.42.0",
        "rolldown": "1.0.0-rc.2",
        "semantic-release": "^25.0.3",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "bun": "^1.3.8"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    }
}
